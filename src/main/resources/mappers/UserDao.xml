<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forum.projectlzy.dao.UserDao">
    <resultMap id="UserEntityResultMap" type="com.forum.projectlzy.dao.UserDao">
        <id property="id" column="id"/>
        <result property="userName" column="username"/>
        <result property="passWord" column="password"/>
        <result property="createdTime" column="created_time"/>
        <result property="email" column="email"/>
        <result property="state" column="state"/>
        <result property="admin" column="admin"/>
    </resultMap>

    <insert id="insertByEntity"  parameterType="com.forum.projectlzy.entity.User" useGeneratedKeys="true"
            keyProperty="id">
            insert into user_table values (null,#{userName},#{passWord},null,null,null,null)
    </insert>


</mapper>